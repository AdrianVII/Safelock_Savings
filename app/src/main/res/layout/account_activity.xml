<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:fitsSystemWindows="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backText"
        android:padding="10dp"
        android:fontFamily="@font/roboto_regular"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/accountText"
        android:layout_marginHorizontal="15dp"
        android:textSize="40sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/grey"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/user"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nameText"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threePointsText"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emailText"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/threePointsText"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:id="@+id/changepass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/changePasswordText"
                android:textSize="19sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:padding="5dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_regular"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btnDELETEACC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteAccountText"
        android:fontFamily="@font/roboto_regular"
        android:textAllCaps="false"
        android:layout_marginHorizontal="19dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/singout_background"/>

</LinearLayout>