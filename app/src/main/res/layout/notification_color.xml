<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_dialog">

        <LinearLayout
            android:id="@+id/rlt"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_light"
                android:text="@string/importanceText"
                android:textSize="25sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/white_background"
                android:elevation="0dp">

                <RadioButton
                    android:id="@+id/rdblessImpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:button="@drawable/radiobutton_lessimportant"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingHorizontal="10dp"
                    android:text="@string/lessImportantText"
                    android:textSize="19sp" />

                <RadioButton
                    android:id="@+id/rdbImportant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/radiobutton_important"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingHorizontal="10dp"
                    android:text="@string/importantText"
                    android:textSize="19sp" />

                <RadioButton
                    android:id="@+id/rdbVeryImpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:button="@drawable/radiobutton_veryimportant"
                    android:fontFamily="@font/montserrat_light"
                    android:paddingHorizontal="10dp"
                    android:text="@string/veryImportantText"
                    android:textSize="19sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding = "5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnno"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/cancelText"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_white_spinner"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/btnyes"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/confirmText"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_white_spinner"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>