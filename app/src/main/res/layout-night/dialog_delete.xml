<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_dialog"
    android:backgroundTint="@color/lessimportant"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/areYouSureYouWantToDeleteEverythingFromBudgetsText"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/ifYouDeleteEverythingYouWillNotBeAbleToUndoThisActionText"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">

        <soup.neumorphism.NeumorphButton
            android:id="@+id/yes"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/yesText"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="@color/bottom_night2"
            app:neumorph_shadowColorDark="@color/shadow2"
            app:neumorph_shadowColorLight="@android:color/transparent" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <soup.neumorphism.NeumorphButton
            android:id="@+id/no"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/noText"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:neumorph_backgroundColor="@color/bottom_night2"
            app:neumorph_shadowColorDark="@color/shadow2"
            app:neumorph_shadowColorLight="@android:color/transparent" />

    </LinearLayout>


</LinearLayout>