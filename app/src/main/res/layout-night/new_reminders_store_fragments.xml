<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_night"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/nameText"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/amountEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/amountText"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <TextView
                android:id="@+id/cutoffDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@string/cutoffDateText"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deadlineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:maxLines="1"
                android:padding="10dp"
                android:text="@string/deadlineText"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/descriptionEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/descriptionText"
                android:maxLines="4"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/importanceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/importanceText"
                    android:textSize="18sp" />

                <View
                    android:id="@+id/importantColor"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/box_important_unselected_night"
                    android:padding="10dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/monthEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="9dp"
                android:backgroundTint="@color/lessimportant"
                android:background="@drawable/background_edittext_reminders"
                android:fontFamily="@font/montserrat_regular"
                android:hint="@string/monthsText"
                android:inputType="number"
                android:maxLines="1"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnNEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/bottom_night"
            android:background="@drawable/background_button"
            android:paddingHorizontal="25dp"
            android:text="@string/nextButton"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>