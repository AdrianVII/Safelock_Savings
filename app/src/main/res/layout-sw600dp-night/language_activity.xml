<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_night"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:padding="10dp"
        android:text="@string/backText"
        android:textColor="@color/text_color"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/languageText"
        android:textColor="@color/text_color"
        android:textSize="50sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:elevation="1dp">

        <RadioButton
            android:id="@+id/rdbSPANISH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:text="@string/spanishText"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/bottom_night" />

        <RadioButton
            android:id="@+id/rdbENGLISH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"
            android:padding="10dp"
            android:text="@string/englishText"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RadioGroup>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnAPPLY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="19dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/settings_button_background"
        android:backgroundTint="@color/bottom_night"
        android:fontFamily="@font/roboto_regular"
        android:text="@string/applyChangesText"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23sp" />

</LinearLayout>