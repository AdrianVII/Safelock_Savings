<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backText"
        android:textSize="25sp"
        android:padding="10dp"
        android:fontFamily="@font/roboto_regular"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/newReportText"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginHorizontal="26dp"
            android:textColor="@color/grey"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_report_months"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthsText"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yearText"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins_regular"/>


    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameText"
        android:textSize="30sp"
        android:textColor="@color/grey_white_spinner"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/background_spinner"/>

    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amountText"
        android:textSize="30sp"
        android:textColor="@color/grey_white_spinner"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/background_spinner"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dateText"
        android:textSize="30sp"
        android:textColor="@color/grey_white_spinner"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/background_spinner"/>


</LinearLayout>