<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nameText"
        android:fontFamily="@font/montserrat_regular"
        android:textColorHint="@color/grey_white_spinner"
        android:textColor="@color/grey_white_spinner"
        android:padding="10dp"
        android:textSize="25sp"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/background_edittext_reminders"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amountText"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColorHint="@color/grey_white_spinner"
        android:textColor="@color/grey_white_spinner"
        android:padding="10dp"
        android:maxLines="1"
        android:inputType="numberDecimal"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/background_edittext_reminders"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dateText"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/background_edittext_reminders"
        android:layout_marginTop="9dp"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/grey_white_spinner"
        android:maxLines="1"
        android:textSize="25sp"/>

    <LinearLayout
        android:id="@+id/importantColor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/importanceText"
            android:fontFamily="@font/montserrat_regular"
            android:padding="10dp"
            android:textSize="25sp"/>

        <View
            android:id="@+id/importantColor"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/box_important_unselected"
            android:padding="10dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="9dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/repeat"
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repeatText"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_regular"
            android:padding="10dp"
            android:textColor="@color/grey_white_spinner"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/background_spinner"
        android:entries="@array/repeatSubscriptions"
        android:popupBackground="@drawable/background_spinner"
        android:paddingVertical="12dp"
        android:dropDownVerticalOffset="60dp"
        android:popupElevation="20dp"
        android:visibility="gone"/>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnNEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextButton"
            android:textSize="25sp"
            android:background="@drawable/background_button"
            android:paddingHorizontal="25dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>
    </LinearLayout>


</LinearLayout>